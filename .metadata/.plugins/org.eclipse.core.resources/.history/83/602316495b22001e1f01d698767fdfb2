package com;

import java.util.ArrayList;
import java.util.List;

public class Principal {
	
	public static void main(String[] args) {
		
		
		List<String> lista = new ArrayList<String>();
		//List<String> lista2 = new ArrayList<String>();
		
		
		//Agregar elementos a la lista 
		lista.add("Hola");
		lista.add("al ");
		lista.add("mamitas");
		lista.add("saliendo");
		lista.add("o");
		lista.add("se");
		lista.add("les");
		lista.add("arruga");
		lista.add("el");
		lista.add("cutis");
		lista.add("?");
		lista.add("?");
		
		// para saber si ya  se guardaron se puede Imprimir su tamaño
		System.out.println(lista.size());
		//O imprimir la lista 
		System.out.println(lista);
		//Busca un elemento dentro de la lista, devuelve true o false 
		System.out.println(lista.contains("que"));
		//Compara 2 listas entre si
		//System.out.println(lista.equals(lista2));
		//Devuelve el elemento en el indice dado 
		System.out.println(lista.get(6));
		// >Me devuelve el indice del objeto dado
		System.out.println(lista.indexOf("arruga"));
		//&Devuelve true si la lista esta vacia
		System.out.println(lista.isEmpty());
		//
		System.out.println(lista.lastIndexOf("?"));
		
		
		
		
		
		
	}

}
